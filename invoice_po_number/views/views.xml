   <record id="view_account_move_cpo_number" model="ir.ui.view">
            <field name="name">account cpo number</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">

                <field name="invoice_date" position="after">

                    <field name="cpo_number"/>

                </field>


                 <xpath expr="//field[@name='invoice_line_ids']" position="after">

                    <group>
                        <group>

                            <field name="transpotation_charge"/>
                            <field name="loading_charge"/>
                            <field name="unloading_charge"/>
                            <field name="weighning_charge"/>
                            <field name="equipment_rental_charge"/>
                            <field name="labor_charge"/>


                        </group>
                    </group>
                </xpath>

                <field name="amount_total" position="before">

                <field name="other_charges"/>

                </field>






            </field>
        </record>




